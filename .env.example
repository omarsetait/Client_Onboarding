# Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL="postgresql://tachyhealth:tachyhealth@localhost:5432/tachyhealth_onboarding?schema=public"
MONGODB_URL="mongodb://localhost:27017/tachyhealth"
REDIS_URL="redis://localhost:6379"

# ===========================================
# Authentication
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ===========================================
# OpenAI Configuration
# ===========================================
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4"

# ===========================================
# HubSpot CRM Integration
# ===========================================
HUBSPOT_API_KEY=""
HUBSPOT_PORTAL_ID=""

# ===========================================
# Email Configuration (SendGrid)
# ===========================================
SENDGRID_API_KEY=""
EMAIL_FROM_ADDRESS="noreply@tachyhealth.com"
EMAIL_FROM_NAME="TachyHealth"

# ===========================================
# Microsoft Graph (Outlook/Teams) Integration
# ===========================================
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_TENANT_ID=""
DEFAULT_SALES_REP_EMAIL="sales@tachyhealth.com"

# ===========================================
# Application Settings
# ===========================================
NODE_ENV="development"
API_PORT=3001
WEB_PORT=3000
API_URL="http://localhost:3001"
WEB_URL="http://localhost:3000"

# ===========================================
# Logging
# ===========================================
LOG_LEVEL="debug"

# ===========================================
# File Storage (S3/MinIO)
# ===========================================
S3_BUCKET="tachyhealth-documents"
S3_REGION="us-east-1"
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
